<% include ../partials/header %>

<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1>This is the products page</h1>
			<p>The best products of the known multiverse</p>
			<p>
				<a href="/products/new" class="btn btn-primary btn-lg">Add a new Product</a>
			</p>
		</div>
	</header>
	<section>
		<div class="row productRow">
			<% products.forEach(function(product){ %>
				<div class="col-md-3 col-sm-6">
					<!--<div class="thumbnail">-->
					<div class="card mb-4 box-shadow rounded-0">
						<img class="card-img-top w-100 d-block rounded-0" src="<%= product.image %>">
						<!--<div class="caption">-->
						<div class="card-body">
							<h4 class="card-title"><%= product.name %></h4>
							<p class="card-text"><%= product.description.substring(0,50) %>...</p>
						</div>
						<form action="/cart/add/<%= product._id %>" method="POST">
							<button class="btn btn-default card-link">
								<i class="fas fa-shopping-cart"></i>
							</button>
							<input type="hidden" name="_csrf" value="<%= csrfToken %>">
						</form>
						<a style="display:inline" class="btn btn-danger" href="/products/<%= product._id %>"><i class="fas fa-info"></i></a>
						
					</div>	
				</div>
			<% }) %>
		</div>
	</section>
</div>








<% include ../partials/footer %>