<% include ../partials/header %>
<div class="container">
	<h1 style="text-align: center;">Edit <%=product.name%></h1>
    <div class="row">
        
        <div style="width: 30%; margin: 30px auto;">
            <form action="/products/<%= product._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= product.name %>" name="product[name]">
                </div>
				<div class="form-group">
					<input class="form-control" type="number" value="<%= product.price %>" name="product[price]" step="0.01">
				</div>	
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= product.image%>" name="product[image]">
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="product[description]"><%= product.description%></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
				<input type="hidden" name="_csrf" value="<%= csrfToken %>"> 
            </form>
            <a href="/products">Go back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>